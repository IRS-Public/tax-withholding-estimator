<?xml version="1.0"?>
<?xml-model href="./FlowConfigModule.rng"?>
<FlowConfigModule>
  <page title="About you" route="about-you">
    <section>
      <fg-set path="/primaryFilerAge65OrOlder">
        <question content-key="flow.about-you.fields./primaryFilerAge65OrOlder.question"/>
        <input type="boolean"/>
      </fg-set>
      <fg-set path="/filingStatus">
        <question content-key="flow.about-you.fields./filingStatus.question"/>
        <select options-path="/filingStatusOptions">
          <option value="single">Single</option>
          <option value="marriedFilingJointly">Married filing jointly</option>
          <option value="marriedFilingSeparately">Married filing separately</option>
          <option value="headOfHousehold">Head of Household</option>
          <option value="qualifiedSurvivingSpouse">Qualifying Widow</option>
        </select>
      </fg-set>
      <fg-set path="/isMFSLivedTogether" if-true="/isFilingStatusMFS">
        <question content-key="flow.about-you.fields./isMFSLivedTogether.question"/>
        <input type="boolean"/>
      </fg-set>
      <fg-set path="/primaryFilerIsClaimingDependents">
        <question content-key="flow.about-you.fields./primaryFilerIsClaimingDependents.question"/>
        <input type="boolean"/>
      </fg-set>
      <fg-set path="/primaryFilerIsBlind">
        <question content-key="flow.about-you.fields./primaryFilerIsBlind.question"/>
        <input type="boolean"/>
      </fg-set>
      <fg-set path="/primaryFilerHasSSN">
        <question content-key="flow.about-you.fields./primaryFilerHasSSN.question"/>
        <input type="boolean"/>
      </fg-set>
      <fg-set path="/primaryFilerIsClaimedOnAnotherReturn">
        <question content-key="flow.about-you.fields./primaryFilerIsClaimedOnAnotherReturn.question"/>
        <input type="boolean"/>
      </fg-set>
      <h2 condition="/isFilingStatusMFJ" operator="isTrue">Spouse</h2>
      <fg-set path="/secondaryFilerAge65OrOlder" if-true="/isFilingStatusMFJ">
        <question content-key="flow.about-you.fields./secondaryFilerAge65OrOlder.question"/>
        <input type="boolean"/>
      </fg-set>
      <fg-set path="/secondaryFilerIsBlind" if-true="/isFilingStatusMFJ">
        <question content-key="flow.about-you.fields./secondaryFilerIsBlind.question"/>
        <input type="boolean"/>
      </fg-set>
      <fg-set path="/secondaryFilerHasSSN" if-true="/isFilingStatusMFJ">
        <question content-key="flow.about-you.fields./secondaryFilerHasSSN.question"/>
        <input type="boolean"/>
      </fg-set>
      <fg-set path="/secondaryFilerIsClaimedOnAnotherReturn" if-true="/isFilingStatusMFJ">
        <question content-key="flow.about-you.fields./secondaryFilerIsClaimedOnAnotherReturn.question"/>
        <input type="boolean"/>
      </fg-set>
      <h2>Start over</h2>
      <fg-reset>
        <button class="usa-button usa-button--outline" type="reset">Start over</button>
      </fg-reset>
    </section>
  </page>
</FlowConfigModule>
