<?xml-model href="./FlowConfigModule.rng"?>
<FlowConfigModule>
  <page title="About you" route="/">
    <section>
      <fg-set path="/filingStatus">
        <question>What filing status will you use for your tax return?</question>
        <select options-path="/filingStatusOptions">
          <option value="single">Single</option>
          <option value="marriedFilingJointly">Married filing jointly</option>
          <option value="marriedFilingSeparately">Married filing separately</option>
          <option value="headOfHousehold">Head of Household</option>
          <option value="qualifiedSurvivingSpouse">Qualifying Widow</option>
        </select>
      </fg-set>

      <fg-set path="/primaryFilerDateOfBirth">
        <question>What’s your date of birth?</question>
        <input type="date" />
      </fg-set>

      <fg-set path="/primaryFilerIsBlind">
        <question>Are you blind?</question>
        <input type="boolean" />
      </fg-set>

      <fg-set path="/primaryFilerHasSSN">
        <question>Do you have an SSN?</question>
        <input type="boolean" />
      </fg-set>

      <fg-set path="/primaryFilerIsClaimedOnAnotherReturn">
        <question>Can anyone else claim you as a dependent on their tax return?</question>
        <input type="boolean" />
      </fg-set>

      <fg-set path="/secondaryFilerDateOfBirth" if-true="/isFilingStatusMFJ">
        <question>What’s your spouse’s date of birth?</question>
        <input type="date" />
      </fg-set>

      <fg-set path="/secondaryFilerIsBlind" if-true="/isFilingStatusMFJ">
        <question>Is your spouse blind?</question>
        <input type="boolean" />
      </fg-set>

      <fg-set path="/secondaryFilerHasSSN" if-true="/isFilingStatusMFJ">
        <question>Does your spouse have an SSN?</question>
        <input type="boolean" />
      </fg-set>

      <fg-set path="/secondaryFilerIsClaimedOnAnotherReturn" if-true="/isFilingStatusMFJ">
        <question>Can anyone else claim your spouse as a dependent on their tax return?</question>
        <input type="boolean" />
      </fg-set>

      <h2>Jobs</h2>
      <fg-collection path="/jobs">
        <fg-set path="/jobs/*/startDate">
          <question>What’s the start date?</question>
          <input type="date" />
        </fg-set>

        <fg-set path="/jobs/*/endDate">
          <question>What’s the end date?</question>
          <input type="date" />
        </fg-set>

        <fg-set path="/jobs/*/mostRecentPayPeriodEnd">
          <question>When did your most recent pay period end?</question>
          <input type="date" />
        </fg-set>

        <fg-set path="/jobs/*/mostRecentPayDate">
          <question>When was your most recent pay date?</question>
          <input type="date" />
        </fg-set>

        <fg-set path="/jobs/*/averagePayPerPayPeriod">
          <question>What’s the average amount you get paid each pay period?</question>
          <input type="dollar" />
        </fg-set>

        <fg-set path="/jobs/*/yearToDateIncome">
          <question>What’s your year-to-date income for this job?</question>
          <input type="dollar" />
        </fg-set>

        <fg-set path="/jobs/*/averageWithholdingPerPayPeriod">
          <question>What’s the average amount of federal withholding each pay period?</question>
          <input type="dollar" />
        </fg-set>

        <fg-set path="/jobs/*/yearToDateWithholding">
          <question>What’s your year-to-date federal withholding for this job?</question>
          <input type="dollar" />
        </fg-set>

        <fg-set path="/jobs/*/payFrequency">
          <question>How frequently are you paid?</question>
          <select options-path="/jobs/*/payFrequency">
            <option value="weekly">Weekly</option>
            <option value="biWeekly">Biweekly</option>
            <option value="semiMonthly">Semimonthly</option>
            <option value="monthly">Monthly</option>
          </select>
        </fg-set>

        <fg-set path="/jobs/*/totalBonusReceived">
          <question>What bonus amount were you paid for this job?</question>
          <input type="dollar" />
        </fg-set>

        <fg-set path="/jobs/*/preTaxDeductions">
          <question>Job's pre-tax deductions</question>
          <input type="dollar" />
        </fg-set>
      </fg-collection>

      <fg-set path="/totalAdvancedPayments">
        <question>What is the total amount of advanced tax payments you made to date?</question>
        <input type="dollar" />
      </fg-set>

      <h2>Start over</h2>
      <fg-reset>
        <button class="usa-button usa-button--outline" type="reset">Start over</button>
      </fg-reset>
    </section>
  </page>
</FlowConfigModule>
