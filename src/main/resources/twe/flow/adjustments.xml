<FlowConfigModule>
  <page title="Adjustments" route="adjustments">
    <section>
      <h1>Adjustments</h1>

      <h2>Educator Expense Adjustment</h2>
      <fg-set path="/actualEducatorExpensesAdjustmentAmount">
        <question>How much educator expenses have you paid so far this tax year?</question>
        <input type="dollar"/>
      </fg-set>

      <h2>Student Loan Interest Adjustment</h2>
      <fg-set path="/actualStudentLoanInterestAdjustmentAmount">
        <question>How much student loan interest have you paid so far this tax year</question>
        <input type="dollar"/>

      </fg-set>

      <h2>HSA Contribution Adjustment</h2>
      <fg-set path="/actualHsaTotalDeductibleAmount">
        <question>What is the total deductible amount of HSA contributions you have made this
          year?
        </question>
        <input type="dollar"/>
      </fg-set>

      <p>Your adjusted gross income:
      <fg-show path="/agi"/>
      </p>
    </section>
  </page>
</FlowConfigModule>
