<FormConfig>

  <section>
    <h2>Income</h2>
    <fg-set path="/filingStatus">
      <label>What filing status will you use for your tax return?</label>
      <select optionsPath="/filingStatusOptions">
        <option value="single">Single</option>
        <option value="marriedFilingJointly">Married filing jointly</option>
        <option value="marriedFilingSeparately">Married filing separately</option>
        <option value="headOfHousehold">Head of Household</option>
        <option value="qualifiedSurvivingSpouse">Qualifying Widow</option>
      </select>
    </fg-set>

    <fg-set path="/income">
      <label>Total income for the year</label>
      <input type="dollar"/>
    </fg-set>

    <fg-set path="/taxesPaid" condition="/incomeGreaterThan0">
      <label>Total taxes paid for the year</label>
      <input type="dollar"/>
    </fg-set>

  </section>

  <section>
    <h2>Calculations</h2>
    <p>
      Your <strong>taxable income</strong> is:
      <fg-show path="/roundedTaxableIncome" />
    </p>

    <p>
      Your <strong>suggested adjustment per pay period</strong> is:
      <fg-show path="/adjustmentNeededPerPayPeriod" />
    </p>
  </section>

</FormConfig>
