<?xml version="1.0"?>
<?xml-model href="./FactDictionaryModule.rng"?>
<FactDictionaryModule>
  <Facts>
    <Fact path="/taxYear">
      <Description>The tax year of the return.</Description>
      <TaxYear>2025</TaxYear>
      <Derived>
        <Int>2025</Int>
      </Derived>
    </Fact>
    <Fact path="/daysInYear">
      <Description>The number of days in the tax year: 365 or 366.</Description>
      <TaxYear>2025</TaxYear>
      <Derived>
        <Int>365</Int>
      </Derived>
    </Fact>
    <Fact path="/daysInPriorYear">
      <Description>The number of days in the prior tax year: 365 or 366.</Description>
      <TaxYear>2024</TaxYear>
      <Derived>
        <Int>366</Int>
      </Derived>
    </Fact>
    <Fact path="/isLeapYear">
      <Description>Whether or not the current tax year is a leap year.</Description>
      <TaxYear>2025</TaxYear>
      <Derived>
        <Switch>
          <Case>
            <When>
              <Equal>
                <Left>
                  <Dependency path="/daysInYear"/>
                </Left>
                <Right>
                  <Int>366</Int>
                </Right>
              </Equal>
            </When>
            <Then>
              <True/>
            </Then>
          </Case>
          <Case>
            <When>
              <True/>
            </When>
            <Then>
              <True/>
            </Then>
          </Case>
        </Switch>
      </Derived>
    </Fact>
  </Facts>
</FactDictionaryModule>
